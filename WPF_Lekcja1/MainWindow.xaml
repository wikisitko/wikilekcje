<Window x:Class="WPF_Lekcja1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Lekcja1"
        mc:Ignorable="d"
        Title="Lekcja WPF" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="texttb" HorizontalAlignment="Left" Margin="72,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Liczba 1:" HorizontalAlignment="Left" Margin="72,49,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="okbtn" Content="OK" HorizontalAlignment="Left" Margin="72,142,0,0" VerticalAlignment="Top" Width="120" Click="okbtn_Click">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#99FFE800"/>
                    <GradientStop Color="#FF5ADC00" Offset="1"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <TextBox x:Name="texttb_Copy" HorizontalAlignment="Left" Margin="72,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Liczba 1:" HorizontalAlignment="Left" Margin="72,93,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
